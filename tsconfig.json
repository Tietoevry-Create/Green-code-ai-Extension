{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "outDir": "./out",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "strictPropertyInitialization": false,
      "resolveJsonModule": true,
      "baseUrl": "./",
      "paths": {
        "*": ["node_modules/*"]
      },
      "jsx": "react",
      "lib":[
        "ES2021.String"
      ]
    },
    "include": [
      "src/**/*.tsx", 
      "src/ai-extension.ts", 
      "src/sidebar-provider.ts"    
    ],
    "exclude": [
      "node_modules"
    ]
  }
   